{
  "configuration":{
    "status":"warn",
    "name":"ips-api-default",
    "appenders":{
      "Console": {
        "name":"STDOUT",
        "target":"SYSTEM_OUT",
        "PatternLayout": {
          "pattern": "%d{ISO8601} ips-api:console %-5p %c [%t]: %m%n%n"
        }
      },
      "RollingFile":{
        "name":"dailyLog",
        "filename":"${sys:catalina.base}/logs/ips-api.log",
        "filePattern":"${sys:catalina.base}/logs/$${date:yyyy-MM}/ips-api-%d{MM-dd-yyyy}-%i.log.gz",
        "PatternLayout":{
          "pattern":"%d{yyyy-MM-dd'T'HH:mm:ss} LEVEL=%-5p, thread_id='%t', cat=%c{1}, %m%n"
        },
        "Policies":{
          "TimeBasedTriggeringPolicy":{
            "interval":"1",
            "modulate":"true"
          }
        }
      }
    },
    "loggers":{
      "root":{
        "level":"info",
        "AppenderRef":{
          "ref":"STDOUT"
        },
        "AppenderRef":{
          "ref":"dailyLog"
        }
      }
    }
  }
}